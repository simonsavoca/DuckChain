[Unit]
Description=DuckChain - Pubnet Fast Node 01
After=syslog.target network.target

[Service]
ExecStart=/usr/bin/geth --config /home/simon/DuckChain/config/geth/DuckChain_Pubnet_FastNode01.toml
Restart=on-failure
KillSignal=SIGINT

# log output to syslog as 'geth'
SyslogIdentifier=geth
StandardOutput=syslog

# non-root user to run as
WorkingDirectory=/home/duck/
User=duck
Group=duck

[Install]
WantedBy=multi-user.target
